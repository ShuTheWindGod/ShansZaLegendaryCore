#include <iostream>

using namespace std;

int main()
{
    double pax,chance,zet;

    cout<< "Vavedi broi na dnite:";
    cin>>pax;

    chance=0.000000;
    zet=0.180000;
    for(int j=0;j<=pax;j++)
    {
        chance+zet==chance;
        (100.000000-chance)*zet==zet;
    }

    cout<<"Shansa ti za "<< pax <<" dni e "<<chance<<" procenta"<<endl;

    return 0;
}
